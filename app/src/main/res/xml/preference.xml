<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="账号管理">
        <Preference
            android:key="account"
            android:layout="@layout/preference"
            android:title="用户登录" />

        <Preference
            android:key="myinfo"
            android:layout="@layout/preference"
            android:summary="我的信息,收藏,粉丝....."
            android:title="我的资料"

            />


    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="功能设置">
        <Preference
            android:key="saveimagepath"
            android:layout="@layout/preference"
            android:summary="设置图片的保存路径"
            android:title="图片保存路径" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="httpslogin"
            android:layout="@layout/preference"
            android:summary="当前以HTTP登录"
            android:title="HTTPS登录" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="loadimage"
            android:layout="@layout/preference"
            android:summary="页面加载图片 (默认在WIFI网络下加载图片)"
            android:title="加载图片" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="scroll"
            android:layout="@layout/preference"
            android:summary="已关闭左右滑动"
            android:title="左右滑动" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="voice"
            android:layout="@layout/preference"
            android:summary="已开启提示声音"
            android:title="提示声音" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="checkup"
            android:layout="@layout/preference"
            android:summary="启动程序时检查版本更新"
            android:title="启动检查更新" />

    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="缓存设置">
        <Preference
            android:layout="@layout/preference"
            android:title="清除缓存"
            android:key="cache"
            android:summary="0KB"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="其他">
        <Preference
            android:layout="@layout/preference"
            android:title="意见反馈"
            android:key="feedback"
            android:summary="用户意见反馈"/>
        <Preference
            android:layout="@layout/preference"
            android:title="新版本检测"
            android:key="update"
            android:summary="检测是否有新版本"/>
        <Preference
            android:layout="@layout/preference"
            android:title="关于我们"
            android:key="about"
            android:summary="关于我们、版权信息"/>
    </PreferenceCategory>
</PreferenceScreen>