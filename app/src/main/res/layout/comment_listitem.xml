<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip">

    <ImageView
        android:id="@+id/comment_listitem_userface"
        style="@style/user_face_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_blue"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:id="@+id/comment_listitem_refers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@mipmap/review_bg_blue"
            android:orientation="vertical"></LinearLayout>

        <net.oschina.app.widget.LinkView
            android:id="@+id/comment_listitem_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:autoLink="web|email"
            android:textColor="@color/listitem_black"
            android:textColorLink="@color/listitem_blue"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:id="@+id/comment_listitem_relies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@mipmap/review_bg_top"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_listitem_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/comment_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout> 
