<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/blog_detail_footer"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

    <ViewSwitcher
        android:id="@+id/blog_detail_foot_viewswitcher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/widget_bar_bg_n"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blog_detail_footbar_editebox"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@mipmap/reply_editbox_bg1"/>

            <ImageView
                style="@style/main_footbar_cutline"
                android:src="@mipmap/widget_bar_cut_off"/>

            <ImageView
                android:id="@+id/blog_detail_footbar_detail"
                style="@style/main_footbar_image"
                android:src="@drawable/widget_bar_detail"/>

            <ImageView
                style="@style/main_footbar_cutline"
                android:src="@mipmap/widget_bar_cut_off"/>

            <ImageView
                android:id="@+id/blog_detail_footbar_commentlist"
                style="@style/main_footbar_image"
                android:src="@drawable/widget_bar_comment"/>

            <ImageView
                style="@style/main_footbar_cutline"
                android:src="@mipmap/widget_bar_cut_off"/>

            <ImageView
                android:id="@+id/blog_detail_footbar_favorite"
                style="@style/main_footbar_image"
                android:src="@drawable/widget_bar_favorite"/>

            <ImageView
                style="@style/main_footbar_cutline"
                android:src="@mipmap/widget_bar_cut_off"/>

            <ImageView
                android:id="@+id/blog_detail_footbar_share"
                style="@style/main_footbar_image"
                android:src="@drawable/widget_bar_share"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/widget_bar_bg_n"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dip">

            <EditText
                android:id="@+id/blog_detail_foot_editer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="web|email"
                android:background="@mipmap/reply_edittext_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top"
                android:visibility="gone"/>

            <Button
                android:id="@+id/blog_detail_foot_pubcomment"
                android:layout_width="45dip"
                android:layout_height="34dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/widget_button_bg"
                android:text="评论"
                android:textColor="@color/black"
                android:textSize="14dip"/>
        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>
